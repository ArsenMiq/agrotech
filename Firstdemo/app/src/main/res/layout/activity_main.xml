<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/kiop"
    android:orientation="vertical"
    tools:context="com.example.arsen.firstdemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/magic_button_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/hio"
            app:button_icon_height="70dp"
            app:button_icon_width="70dp"
            app:expandable_area_color="#0574be"
            app:hide_text="Water"
            app:hide_text_color="@android:color/black"
            app:hide_text_size="15dp"
            app:icon_button_color="#4299e1"
            app:magic_button_size="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/magic_button_maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/maps"
            app:button_icon_height="70dp"
            app:button_icon_width="60dp"
            app:expandable_area_color="#0a4102"
            app:hide_text="Maps"
            app:hide_text_color="@android:color/black"
            app:hide_text_size="15dp"
            app:icon_button_color="#2c643b"
            app:magic_button_size="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/magic_button_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_icon="@drawable/notes"
            app:button_icon_height="50dp"
            app:button_icon_width="60dp"
            app:expandable_area_color="#dac364"
            app:hide_text="Notes"
            app:hide_text_color="@android:color/black"
            app:hide_text_size="15dp"
            app:icon_button_color="#c1cf7a"
            app:magic_button_size="80dp" />
    </LinearLayout>
</LinearLayout>
