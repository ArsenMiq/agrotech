<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgr"
    tools:context="com.example.arsen.firstdemo.Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center">

        <EditText
            android:id="@+id/editText"

            android:layout_width="245dp"
            android:layout_height="30dp"
            android:background="@drawable/elipso"
            android:ems="10"
            android:gravity="center"
            android:hint="Username"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textColorHint="@color/common_google_signin_btn_text_dark_pressed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="vertical" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="245dp"
            android:layout_height="30dp"
            android:background="@drawable/elipso"
            android:ems="10"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/common_google_signin_btn_text_dark_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="vertical" />

        <Button
            android:id="@+id/signin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/elipsotwo"
            android:gravity="center"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Forgot username or password?"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="288dp"
            android:layout_height="128dp"
            android:text="Press here to recover"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textColorLink="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="230dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:text="Don't have an account yet?"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />

        <Button
            android:id="@+id/signup"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/elipsotwo"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
